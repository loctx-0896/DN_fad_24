<!-- Back to top -->
<div class="btn-back-to-top" id="myBtn">
  <span class="symbol-btn-back-to-top">
  <i class="fas fa-caret-square-up"></i>
  </span>
</div>
<!-- Modal1 -->
<div class= '<%= "wrap-modal1 js-modal#{purchase.id} p-t-60 p-b-20" %>'>
  <div class= '<%= "overlay-modal1 js-hide-modal#{purchase.id}" %>'></div>
  <div class="container">
    <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
      <button  productid ="<%= purchase.id %>" class='<%= "js-hide-modal how-pos3 hov3 trans-04 js-hide-modal#{purchase.id}" %>'>
      <img src="/assets/icon-close.png" alt="CLOSE">
      </button>
      <div class="row">
        <div class="col-md-6 col-lg-7 p-b-30">
          <div class="p-l-25 p-r-30 p-lr-0-lg">
            <div class="wrap-slick3 flex-sb flex-w">
              <div class="wrap-slick3-dots"></div>
              <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>
              <div class="slick3 gallery-lb">
                <div class="item-slick3" data-thumb="<%= purchase.picture %>">
                  <div class="wrap-pic-w pos-relative">
                    <img src="<%= purchase.picture %>" alt="IMG-PRODUCT">
                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                      href="<%= purchase.picture %>" target="_blank">
                    <i class="fa fa-expand"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-5 p-b-30">
          <div class="p-r-50 p-t-5 p-lr-0-lg">
            <h4 class="mtext-105 cl2 js-name-detail p-b-14">
              <%= purchase.name %>
            </h4>
            <span class="mtext-106 cl2">
            <%= number_to_currency purchase.price %>
            </span>
            <p class="stext-102 cl3 p-t-23">
              <%= purchase.description %>
            </p>
            <!--  -->
            <div class="p-t-33">
              <div class="flex-w flex-r-m p-b-10">
              </div>
              <div class="flex-w flex-r-m p-b-10">
                <div class="size-204 flex-w flex-m respon6-next">
                  <%= link_to "javascript:void(0)", class: "social-info shopping", data_product_id: purchase.id do %>
                    <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                      <%= t(".add_to_cart") %>
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
