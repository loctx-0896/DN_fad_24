<% provide(:title, t(".change_password")) %>

<section class="bg0 p-t-104 p-b-116">
  <div class="container">
    <div class="form_login">
      <h4 class="mtext-105 cl2 txt-center p-b-30">
        <%= t(".change_password") %>
      </h4>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
         <div class="bor8 m-b-20 how-pos4-parent">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
            class: "stext-111 cl2 plh3 size-116 p-l-62 p-r-30", placeholder: t(".password") %>
        </div>
        <div class="bor8 m-b-20 how-pos4-parent">
          <%= f.password_field :password_confirmation, autocomplete: "off",
            class: "stext-111 cl2 plh3 size-116 p-l-62 p-r-30", placeholder: t(".password_confirm") %>
        </div>
        <%= f.submit t(".submit"), class: "flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" %>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
