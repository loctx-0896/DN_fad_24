<% provide :title, t(".title") %>
<div class="content">
  <%= link_to t(".add_user"), new_admin_user_path, class: "add_user" %> |
  <%= link_to t(".import"), admin_imports_path %> |
  <%= link_to t(".export"), admin_export_users_path(format: :csv) %>
  <table class="table">
    <thead class=" text-primary">
      <th>
        <%= t(".name") %>
      </th>
      <th>
        <%= t(".picture") %>
      </th>
      <th>
        <%= t(".email") %>
      </th>
      <th>
        <%= t(".phone") %>
      </th>
      <th>
        <%= t(".role") %>
      </th>
      <th>
        <%= t(".function") %>
      </th>
    </thead>
    <tbody>
      <%= render @users %>
    </tbody>
    <div class="topnav">
      <div class="search-container">
        <%= search_form_for @q, url: admin_users_path do |f| %>
          <%= f.search_field :name_cont, placeholder: t(".search"), class: "topnav_input" %>
        <% end %>
      </div>
    </div>
  </table>
  <%= will_paginate %>
</div>
