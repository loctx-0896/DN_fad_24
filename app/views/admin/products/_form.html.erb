<%= render "shared/error_messages", object: f.object %>

<%= f.label t ".name" %>
<%= f.text_field :name, class: "form-control" %>

<%= f.label t ".description" %>
<%= f.text_field :description, class: "form-control" %>

<%= f.label t ".detail" %>
<%= f.text_area :detail, cols: 30, rows: 10, class: "form-control" %>

<%= f.label t ".picture" %>
<%= f.file_field :picture, accept: Settings.accept_picture %>

<%= f.label t ".price" %>
<%= f.text_field :price, class: "form-control" %>

<%= f.label :category_name, t(".category_name") %>
<%= f.select :category_id, @categories.collect { |p| [ p.name, p.id ] } %>

<%= f.submit t(".save"), class: "btn btn-primary" %>
