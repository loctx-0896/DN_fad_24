<% provide :title, t(".title") %>
<div class="content">
  <%= link_to t(".add_product"), new_admin_product_path, class: "add_user" %>
  <table class="table">
    <thead class=" text-primary">
      <th>
        <%= t(".name") %>
      </th>
      <th>
        <%= t(".description") %>
      </th>
      <th>
        <%= t(".picture") %>
      </th>
      <th>
        <%= t(".detail") %>
      </th>
      <th>
        <%= t(".price") %>
      </th>
      <th>
        <%= t(".status") %>
      </th>
      <th>
        <%= t(".category") %>
      </th>
      <th>
        <%= t(".function") %>
      </th>
    </thead>
    <tbody>
      <%= render @products %>
    </tbody>
    <div class="topnav">
      <div class="search-container">
        <%= search_form_for @q, url: admin_products_path do |f| %>
          <%= f.search_field :name_cont, placeholder: t(".search"), class: "topnav_input" %>
        <% end %>
      </div>
    </div>
  </table>
  <%= will_paginate %>
</div>
